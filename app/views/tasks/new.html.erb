<h1>Create a New Task</h1>

<%= form_with model: @task, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :details %>
    <%= form.text_area :details %>
  </div>

  <div>
    <%= form.check_box :completed %>
    <%= form.label :completed, "Completed" %>
  </div>

  <%= form.submit "Create Task" %>
<% end %>
